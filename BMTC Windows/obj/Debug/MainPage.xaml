<Page
    x:Class="BMTC_Windows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:BMTC_Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">


    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="15"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Canvas x:Name="TimeTableCanvas"
                Background="#FF729C26"
                Grid.Row="0">
            <TextBlock x:Name="TimeTableTextBlock"
                   Text="Time Table"
                   Foreground="WhiteSmoke"
                   FontSize="38"
                   Canvas.Left="115"
                   Canvas.Top="5" FontFamily="Tunga"/>
        </Canvas>

        <Canvas x:Name="SelectServiceCanvas"
                Grid.Row="1">

            <TextBlock x:Name="SelectServiceTextBlock"
                   Text="Select Service Type"
                   Foreground="Black"
                   Style="{StaticResource SubheaderTextBlockStyle}"
                   Canvas.Left="20"
                   Canvas.Top="10"
                   FontFamily="Tunga"/>
        </Canvas>

        <Canvas x:Name="GeneralServiceCanvas"
                Grid.Row="2"
                Background="White">

            <TextBlock x:Name="GeneralServiceTextBlock"
                   Text="General Service"
                   Foreground="Black"
                   Style="{StaticResource GroupHeaderTextBlockStyle}"
                   Canvas.Top="10"
                   Canvas.Left="20"
                   FontFamily="Tunga"/>

            <TextBlock x:Name="GeneralTextBlock1"
                   Text="This service is general type all bus types"
                   Foreground="Black"
                   Style="{StaticResource ControlContextualInfoTextBlockStyle}"
                   Canvas.Left="20"
                   Canvas.Top="45"
                   FontFamily="Tunga"/>
            <TextBlock x:Name="GeneralTextBlock2"
                   Text="available for any time"
                   Foreground="Black"
                   Style="{StaticResource ControlContextualInfoTextBlockStyle}"
                   Canvas.Left="20"
                   Canvas.Top="65"
                   FontFamily="Tunga"/>
            <Image 
                Source="Assets/RightArrow.png"
                Height="30"
                Width="30"
                Canvas.Left="350"
                Canvas.Top="32">

            </Image>

        </Canvas>

        <Canvas x:Name="ACServiceCanvas"
                Grid.Row="4"
                Background="White">
            <TextBlock x:Name="ACServiceTextBlock"
                   Text="A/C Service"
                   Foreground="Black"
                   Style="{StaticResource GroupHeaderTextBlockStyle}"
                   Canvas.Top="10"
                   Canvas.Left="20"
                   FontFamily="Tunga"/>

            <TextBlock x:Name="ACTextBlock"
                   Text="This service is A/C bus types available for any time"
                   Foreground="Black"
                   Style="{StaticResource ControlContextualInfoTextBlockStyle}"
                   Canvas.Left="20"
                   Canvas.Top="60" FontFamily="Tunga"/>
            <Image 
                Source="Assets/RightArrow.png"
                Height="30"
                Width="30"
                Canvas.Left="350"
                Canvas.Top="32">

            </Image>
        </Canvas>

        <Canvas x:ConnectionId='1' x:Name="BengaluruServiceCanvas"
                Grid.Row="6"
                Background="White"                                  >
            <TextBlock x:Name="BengaluruServiceTextBlock"
                   Text="Bengaluru Darshini"
                   Foreground="Black"
                   Style="{StaticResource GroupHeaderTextBlockStyle}"
                   Canvas.Top="10"
                   Canvas.Left="20"
                   FontFamily="Tunga"/>

            <TextBlock x:Name="BenguluruTextBlock"
                   Text="This is a Bengaluru city sight-seeing service"
                   Foreground="Black"
                   Style="{StaticResource ControlContextualInfoTextBlockStyle}"
                   Canvas.Left="20"
                   TextWrapping="Wrap"
                   Canvas.Top="60" FontFamily="Tunga"/>
            <Image 
                Source="Assets/RightArrow.png"
                Height="30"
                Width="30"
                Canvas.Left="350"
                Canvas.Top="32">
                
            </Image>
        </Canvas>
    </Grid>
</Page>

